# copy the contents of this file to one called '.env' and remove

# host of your mongodb instance
MONGO_DB_HOST=localhost
# prefix for connection to mongodb (either mongodb or mongodb+srv)
# see https://docs.mongodb.com/manual/reference/connection-string/
MONGO_DB_PREFIX=mongodb
# post of mongodb
MONGO_DB_PORT=27017
# name of db
DB_NAME=alpacow
# whether or not to use mongodb for you
START_MONGO_DB=true
# whether or not to use authentication, if false all the fields below are optional
USE_AUTHENTICATION=false
# path to database
MONGO_DB_PATH=PATH_TO_MONGO_DB
# username of your mongodb user
MONGO_DB_USER=USERNAME
# password of your mongodb user
MONGO_DB_PASSWORD=PASSWORD
# if using authentication, the database where the username/pw lives
AUTH_SOURCE=admin

USE_ATLAS=true
ATLAS_URI=YOUR_ATLAS_URI

AZURE_API_KEY=YOUR_API_KEY
# put path to firebase secret here
GOOGLE_APPLICATION_CREDENTIALS=<path_to_firebase_secret>
